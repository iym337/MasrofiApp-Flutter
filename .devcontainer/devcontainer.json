{
  "name": "Flutter Development Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  "features": {
    // هذا الجزء يضمن تثبيت Flutter
    "ghcr.io/devcontainers/features/flutter:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "vscode-icons-team.vscode-icons"
      ]
    }
  },
  // هذا الأمر ينفذ تلقائياً بعد بناء البيئة لتثبيت أدوات Firebase
  "postCreateCommand": "npm install -g firebase-tools",
  "forwardPorts": [8080, 5000]
}
